package DynamicProgrammingAssignment;

import java.util.Arrays;

public class LongestZigZagSq {

	static int[] differences;
	static int solution;
	static int length;
	
	public static void main(String[] args) {
		int[] sequence = {10, 22, 9, 33, 49, 50, 31, 60};
		differences = new int[sequence.length-1];
		for (int i = 0; i<differences.length; i++) {
			differences[i] = sequence[i+1]-sequence[i];
		}
		if (differences.length<=1) {
			System.out.println(sequence.length);
		} 
//		else if (differences.length==2) {
//			if (differences[0]!=0) {
//				System.out.println(2);
//			} else {
//				System.out.println(1);
//			}
//		} 
		else {
			System.out.println(longestZigZagSq(sequence));
		}
	}

	public static int longestZigZagSq(int[] array) {
		int i;
		for (i = 0; i+1<differences.length; i++) {
			if (!differences[i]==0 && (Math.signum(differences[i+1]*-1) == Math.signum(differences[i]))) {
				length++;
			} else {
				break;
			}
		}
		if (i+1 == differences.length-1) {
			return differences.length;
		} else {
			differences = Arrays.copyOfRange(differences, i+1, differences.length-1);
			solution = Math.max(length, longestZigZagSq(differences));
			return solution;
		}
	}

}
